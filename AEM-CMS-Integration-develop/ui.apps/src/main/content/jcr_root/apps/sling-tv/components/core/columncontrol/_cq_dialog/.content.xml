<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Column Control"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                jcr:primaryType="nt:unstructured"
                jcr:title="Columns"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <column-control
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Configure Columns"
                                name="./setup"
                                required="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <two-50-50
                                        jcr:primaryType="nt:unstructured"
                                        text="Two Columns (50:50)"
                                        value="two-50-50"/>
                                    <two-33-66
                                        jcr:primaryType="nt:unstructured"
                                        text="Two Columns (33:67)"
                                        value="two-33-66"/>
                                    <two-25-75
                                        jcr:primaryType="nt:unstructured"
                                        text="Two Columns (25:75)"
                                        value="two-25-75"/>
                                    <two-66-33
                                        jcr:primaryType="nt:unstructured"
                                        text="Two Columns (67:33)"
                                        value="two-66-33"/>
                                    <two-75-25
                                        jcr:primaryType="nt:unstructured"
                                        text="Two Columns (75:25)"
                                        value="two-75-25"/>
                                    <three
                                        jcr:primaryType="nt:unstructured"
                                        text="Three Columns (33:33:33)"
                                        value="three"/>
                                    <three-1-10-1
                                        jcr:primaryType="nt:unstructured"
                                        text="Three Columns (10:80:10)"
                                        value="three-1-10-1"/>
                                    <four
                                        jcr:primaryType="nt:unstructured"
                                        text="Four Columns (25:25:25:25)"
                                        value="four"/>
									<four-2-4-4-2
                                        jcr:primaryType="nt:unstructured"
                                        text="Four Columns (17:33:33:17)"
                                        value="four-2-4-4-2"/>
									<four-1-5-5-1
                                        jcr:primaryType="nt:unstructured"
                                        text="Four Columns (10:40:40:10)"
                                        value="four-1-5-5-1"/>
									<five-2-2-4-2-2
                                        jcr:primaryType="nt:unstructured"
                                        text="Five Columns (17:17:32:17:17)"
                                        value="five-2-2-4-2-2"/>
									<six-2-2-2-2-2-2
                                        jcr:primaryType="nt:unstructured"
                                        text="Six Columns (16:16:16:16:16:16)"
                                        value="six-2-2-2-2-2-2"/>
                                </items>
                            </column-control>
							<columnSeparationPadding
							    jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                text="Column Separator"
                                name="./colPadding"
								checked="true"
                                uncheckedValue="false"
								value="true"/>
							<containerPadding
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
								text="Remove container padding ?"
								name="./containerPadding"
								checked="false"
                                uncheckedValue="false"
								value="true"/>                                  
                        </items>
                    </columns>
                </items>
            </tab1>
        </items>
    </content>
</jcr:root>
