<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Channel"
    sling:resourceType="cq/gui/components/authoring/dialog"
    mode="edit">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="cq-dialog-content-page">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container"
                rel="cq-siteadmin-admin-properties-tabs">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                    type="nav"/>
                <items jcr:primaryType="nt:unstructured">
                    <navigation
                        cq:hideOnEdit="{Boolean}false"
                        cq:showOnCreate="{Boolean}true"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Channel Creation"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                   <pageName
                                            cq:hideOnEdit="{Boolean}true"
                                            cq:showOnCreate="{Boolean}false"
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                            fieldLabel="Channel Name"
                                            name="pageName"
                                            validation="foundation.jcr.name"/>
                                    <title
                                        cq:hideOnEdit="{Boolean}false"
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Channel Title"
                                        name="./jcr:title"
                                        cq-msm-lockable="jcr:title"
                                        required="{Boolean}true"
                                        useFixedInlineToolbar="{Boolean}true"/>
									<description
                                        cq:hideOnEdit="{Boolean}false"
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        fieldLabel="Channel Description"
                                        name="./description"                      
                                        useFixedInlineToolbar="{Boolean}true"/>
                                    <imagefile
                                    	cq:showOnCreate="{Boolean}true"
	                                    jcr:primaryType="nt:unstructured"
	                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
	                                    fieldLabel="Channel Image"
	                                    name="./imageFile"
	                                    rootPath="/content/dam/sling-tv"/>
									<alt
                                        cq:hideOnEdit="{Boolean}false"
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Alt text"
                                        name="./alt"/>
									<slingBlue
										cq:hideOnEdit="{Boolean}false"
                                        cq:showOnCreate="{Boolean}true"
									    jcr:primaryType="nt:unstructured"
		                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
		                                text="Sling Blue"
		                                name="./slingBlue"
										checked="false"
		                                uncheckedValue="false"
										value="true"/>
									<slingOrange
										cq:hideOnEdit="{Boolean}false"
                                        cq:showOnCreate="{Boolean}true"
									    jcr:primaryType="nt:unstructured"
		                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
		                                text="Sling Orange"
		                                name="./slingOrange"
										checked="false"
		                                uncheckedValue="false"
										value="true"/>
									<slingGreen
										cq:hideOnEdit="{Boolean}false"
                                        cq:showOnCreate="{Boolean}true"
									    jcr:primaryType="nt:unstructured"
		                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
		                                text="Best of Spanish TV"
		                                name="./slingGreen"
										checked="false"
		                                uncheckedValue="false"
										value="true"/>
                                </items>
                            </column>
                        </items>
                    </navigation>
                  
                  <basic
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <advanced
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <thumbnail
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <cloudservices
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <personalization
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <permissions
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <blueprint
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <livecopy
                        cq:hideOnEdit="{Boolean}true"
                        cq:showOnCreate="{Boolean}false"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="basic"
                        sling:resourceType="granite/ui/components/foundation/section"/>
                    <icon
                            cq:hideOnEdit="{Boolean}true"
                            cq:showOnCreate="{Boolean}false"
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Icon"
                            sling:resourceType="granite/ui/components/foundation/section"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
