<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:description="Custom Header Dialog"
    jcr:primaryType="nt:unstructured"
    jcr:title="Header Main Tab"
    sling:resourceType="cq/gui/components/authoring/dialog">
	<content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container"
        class="cq-dialog-content-page">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/section"
                rel="cq-siteadmin-admin-properties-tabs"
				jcr:title="Header">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                    type="nav"/>
                        <items jcr:primaryType="nt:unstructured">
						<header
                        cq:hideOnEdit="{Boolean}false"
                        cq:showOnCreate="{Boolean}true"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Header Tab"
                        sling:resourceType="granite/ui/components/foundation/section">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
									<logoImage
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/pathbrowser"                            
										fieldLabel="Sling TV Logo Image"
										rootPath="/content/dam/sling-tv"
										name="./logoImage"/>
									<logoLink
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
										fieldLabel="Sling TV Logo Link"
										name="./logoLink"
										rootPath="/"/>					
									<logoAltText
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"							
										fieldLabel="Sling TV Logo Alt Label"
										name="./logoAltText"/>
									<headerText
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"							
										fieldLabel="Sling TV Logo Text"										
										value="A LA CARTE TVâ„¢ "
										name="./headerText"/>
									<signInLink
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
										fieldLabel="Sign In Link"
										name="./signInLink"										
										rootPath="/"/>									
									<signInText
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"							
										fieldLabel="Sign In Label"										
										value="Sign In"
										name="./signInText"/>
									<memberText
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"							
										fieldLabel="Member Label"
										value="Member"
										name="./memberText"/>
									<myAccountLink
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"							
										fieldLabel="My Account Link"
										name="./myAccountLink"/>
									<signOutLink
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
										fieldLabel="Sign Out Link"
										name="./signOutLink"
										rootPath="/"/>									
									<signOutText
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"							
										fieldLabel="Sign Out Label"
										value="Sign Out"
										name="./signOutText"/>
									<headerNavPath
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        fieldLabel="Header Navigation Path"
                                        name="./headerNavPath"
										rootPath="/"/>
									<hideLanguageSel
									    cq:showOnCreate="{Boolean}true"
										cq:hideOnEdit="{Boolean}false"
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"									
										text="Hide Language Selection ?"
										name="./hideLanguageSel"
										checked="false"
                                        uncheckedValue="false"
										value="true"/>	
									<hideHeaderNav
									    cq:showOnCreate="{Boolean}true"
										cq:hideOnEdit="{Boolean}false"
										jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"									
										text="Hide Desktop Navigation in Header ?"
										name="./hideHeaderNav"
										checked="false"
                                        uncheckedValue="false"
										value="true"/>
								</items>
                            </column>									
                        </items>
                    </header>
                    <languages
                        cq:hideOnEdit="{Boolean}false"
                        cq:showOnCreate="{Boolean}true"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Language Tab"
                        sling:resourceType="granite/ui/components/foundation/section">
						<layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                            margin="{Boolean}false"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">								    
                                    <languageTitle
									    jcr:primaryType="nt:unstructured"
										sling:resourceType="granite/ui/components/foundation/form/textfield"
										fieldLabel="Primary Language Title"
										name="./languageTitle"/>
								    <languages
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        class="foundation-layout-util-maximized-alt"
										fieldLabel="Languages">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            acs-commons-nested=""
                                            name="./languages">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                method="absolute"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">                                                        
														<languageName
															jcr:primaryType="nt:unstructured"
															sling:resourceType="granite/ui/components/foundation/form/textfield"
															fieldLabel="Language Name"
															name="./languageName"/>
														<languageLink
															jcr:primaryType="nt:unstructured"
															sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
															fieldLabel="Language Link"
															name="./languageLink"
															rootPath="/"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </languages>  								
								</items>
                            </column>
                        </items>
					</languages>	
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
